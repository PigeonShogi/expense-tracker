  <div class="d-flex flex-column" style="min-width: 28vw;">
    {{#each expenses}}
    <div class="d-flex flex-row justify-content-between">
      {{!-- 詳細資訊 --}}
      <div class="d-flex flex-row align-items-center" style="background-color: rgb(245, 231, 231);">
        <i class="fa-solid fa-utensils"></i>
        <div class="d-flex flex-column">
          <span>{{this.name}}</span>
          <span>{{this.date}}</span>
        </div>
        <div>
          <span style="margin-left: 60px;">{{this.amount}}</span>
        </div>
      </div>
      {{!-- 修改或刪除 --}}
      <div class="d-flex flex-row">
        <h5 class="mx-2">修改</h5>
        <h5 class="mx-2">刪除</h5>
      </div>
    </div>
    {{/each}}
  </div>


</div>


