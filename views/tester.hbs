<div class="entry">
  <h1>{{title}}</h1>
  {{#with story}}
  <div class="intro">{{{intro}}}</div>
  <div class="body">{{{body}}}</div>
  {{/with}}
</div>
<div class="comments">
  {{#each comments}}
  <div class="comment">
    <h2>{{subject}}</h2>
    {{{body}}}
  </div>
  {{/each}}
</div>

<!-- Uses built-in `if` helper. -->
{{#if showTitle}}
<h1>Home</h1>
{{/if}}

<!-- Calls `foo` helper, overridden at render-level. -->
<p>{{foo}}</p>

<!-- Calls `bar` helper, defined at instance-level. -->
<p>{{bar}}</p>